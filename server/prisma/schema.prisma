datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// We enforce DAILY/WEEKLY and max lengths in application code, not in the DB.
model Habit {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  frequency   String
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

