datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Habit {
  id             Int       @id @default(autoincrement())
  name           String
  description    String?
  frequency      String
  isActive       Boolean   @default(true)
  completedToday Boolean   @default(false)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}


